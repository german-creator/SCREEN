<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.ivanilov.screen.View.Activity.SettingsActivity"
    android:orientation="vertical"
    android:weightSum="16"
    android:background="@color/backgroundcolor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="15"
        android:background="@color/backgroundcolor"
        android:paddingRight="30dp"
        android:paddingLeft="30dp">

        <Button
            android:id="@+id/settings_Button_Password"
            style="@style/ButtonSettings"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Изменить пароль"
            android:textStyle="bold"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            ></FrameLayout>

        <Button
            android:id="@+id/Settings_Button_HelloText"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Изменить тест приветствия"
            style="@style/ButtonSettings"
            android:textStyle="bold"

            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            ></FrameLayout>

        <Button
            android:id="@+id/Settings_Button_SelectGroup"
            style="@style/ButtonSettings"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="Выбрать доступные группы товаров"
            android:textAllCaps="false"
            android:textStyle="bold"

            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            ></FrameLayout>

        <Switch
            android:id="@+id/Settings_Switch_Add"
            style="@style/ButtonSettingsSwitch"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:text="Предлагать добавки к товарам"
            android:textStyle="normal" />



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            ></FrameLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        android:layout_weight="1"
        android:weightSum="3"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        >

        <Button
            android:id="@+id/Settings_Button_Back"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="@string/Ok"
            style="@style/ButtomMenu_Button"
            />



        <Button
            android:id="@+id/Settings_Button_Close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Свернуть приложение"
            style="@style/ButtomMenu_Button"/>

    </LinearLayout>


</LinearLayout>