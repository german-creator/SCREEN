<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:gravity="center"
    android:weightSum="21"
    android:background="@color/backgroundcolor"
    style="@style/Theme.MaterialComponents.Dialog.Alert">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="20"
        android:gravity="center">

        <TextView
            android:id="@+id/Settings_Hello_TextView_HelloText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left"
            android:textColor="@color/colorPrimaryDark"
            android:text="Введите текст приветствия"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_light"
            />

        <EditText
            android:id="@+id/Settings_Hello_EditText_HelloText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/roboto_light"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:imeOptions="actionDone"
            android:singleLine="true"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
           >
            <Button
                android:id="@+id/Settings_Hello_Button_Cancel"
                android:layout_width="100dp"
                android:layout_height="45dp"
                style="@style/ButtonDialog"
                android:gravity="center"
                android:text="Отмена"
                android:layout_marginLeft="150dp"
                android:layout_gravity="bottom"
                />

            <Button
                android:id="@+id/Settings_Hello_Button_SaveText"
                style="@style/ButtonDialog"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:text="ОК"

                />
        </LinearLayout>


    </LinearLayout>




</LinearLayout>