<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:orientation="vertical"
    android:weightSum="16"
    tools:context=".View.Activity.PinCodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="9"
        android:background="@color/backgroundcolor"
        android:orientation="vertical"
        android:weightSum="8"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"


        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"></FrameLayout>

        <TextView
            android:id="@+id/PinCode_TextView_EnterPin"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="Введите пароль"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"

            />

        <EditText
            android:id="@+id/PinCode_EditText_EnterPin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/colorPrimaryDark"
            android:clickable="false"
            android:cursorVisible="true"
            android:focusable="false"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:maxLength="4"
            android:maxLines="1"
            android:numeric="integer"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"

            />


        <TextView
            android:id="@+id/PinCode_TextView_CreatePin"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="Придумайте пароль "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"


            />

        <EditText
            android:id="@+id/PinCode_EditText_CreatePin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/colorPrimaryDark"
            android:clickable="false"
            android:cursorVisible="true"
            android:focusable="false"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:maxLength="4"
            android:maxLines="1"
            android:numeric="integer"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/PinCode_TextView_RepeatPin"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="Повторите пароль"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"


            />

        <EditText
            android:id="@+id/PinCode_EditText_RepeatPin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/colorPrimaryDark"
            android:clickable="false"
            android:cursorVisible="true"
            android:focusable="false"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:maxLength="4"
            android:maxLines="1"
            android:numeric="integer"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonPin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:weightSum="4"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:weightSum="3">

            <Button
                android:id="@+id/PinCode_Button_1"
                style="@style/keyboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1" />

            <Button
                android:id="@+id/PinCode_Button_2"
                style="@style/keyboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2" />

            <Button
                android:id="@+id/PinCode_Button_3"
                style="@style/keyboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/PinCode_Button_4"
                style="@style/keyboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4" />

            <Button
                android:id="@+id/PinCode_Button_5"
                style="@style/keyboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5" />

            <Button
                android:id="@+id/PinCode_Button_6"
                style="@style/keyboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/PinCode_Button_7"
                style="@style/keyboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7" />

            <Button
                android:id="@+id/PinCode_Button_8"
                style="@style/keyboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8" />

            <Button
                android:id="@+id/PinCode_Button_9"
                style="@style/keyboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <FrameLayout
                style="@style/keyboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0" />

            <Button
                android:id="@+id/PinCode_Button_0"
                style="@style/keyboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0" />

            <Button
                android:id="@+id/PinCode_Button_-"
                style="@style/keyboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="DEL" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"></FrameLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:weightSum="3">

        <!--<Button-->
        <!--android:id="@+id/PinCode_Button_Back"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"-->
        <!--android:text="<"-->
        <!--android:textColor="@color/black"-->
        <!--android:backgroundTint="@color/colorPrimary"-->
        <!--android:background="@color/colorPrimary"-->
        <!--style="?android:attr/borderlessButtonStyle"-->
        <!--android:textSize="20dp"-->
        <!--/>-->

        <!--<ImageButton-->
        <!--android:id="@+id/PinCode_Button_Next"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_weight="1"-->
        <!--android:backgroundTint="@color/colorPrimary"-->
        <!--app:srcCompat ="@drawable/button_ok"-->
        <!--android:scaleType="fitCenter"-->
        <!--android:paddingLeft="125px"-->
        <!--android:paddingRight="125px"-->

        <!--/>-->

        <ImageButton
            android:id="@+id/PinCode_Button_Back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            style="@style/ButtomMenu_ButtonBack"
            />

        <Button
            android:id="@+id/PinCode_Button_Next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/Ok"
            style="@style/ButtomMenu_Button"

        />

    </LinearLayout>


</LinearLayout>