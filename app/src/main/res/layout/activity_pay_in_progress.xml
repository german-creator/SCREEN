<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:weightSum="16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="6"
        android:layout_weight="4"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="10"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/Payment_TextView_ToPay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="К оплате"
                android:textSize="30dp"
                android:layout_gravity="bottom"
                android:layout_weight="5"
                android:gravity="center|right"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/Payment_TextView_Sum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Сумма"
                android:textSize="30dp"
                android:layout_gravity="bottom"
                android:layout_weight="2"
                android:gravity="center|left"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="р."
                android:textSize="30dp"
                android:layout_gravity="bottom"
                android:layout_weight="3"
                android:gravity="center|left"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="10"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/Payment_TextView_Sdacha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Сдача"
                android:textSize="23dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="5"
                android:gravity="center|right"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/Payment_TextView_SdachaSum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="23dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:gravity="center|left"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="р."
                android:textSize="23dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="3"
                android:gravity="center|left"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                />
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="10"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/Payment_TextView_InputSum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Передано"
                android:textSize="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="5"
                android:gravity="center|right"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/Payment_EditText_InputSum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:gravity="center|left"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="р."
                android:textSize="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="3"
                android:gravity="center|left"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"

                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:weightSum="3">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></FrameLayout>

        <Button
            android:id="@+id/PayInProgres_Button_GO"
            android:layout_width="216dp"
            android:layout_height="123dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Оплачено" />

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"></FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        android:layout_weight="1"
        android:weightSum="3"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        >

        <ImageButton
            android:id="@+id/Basket_Button_Back"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimaryDark"
            app:srcCompat="@drawable/button_back"
            android:scaleType="fitCenter"
            android:layout_width="0dp" />


        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            />

    </LinearLayout>



</LinearLayout>